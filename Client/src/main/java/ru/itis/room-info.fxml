<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="5.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.itis.controllers.RoomInfoController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label fx:id="labelRoomNumber" text="Room #roomNumber" styleClass="label-title"/>
    <Label fx:id="labelRoomCreator" text="Creator: #username"/>
    <Label fx:id="labelRoomMaxMembers" text="Maximum number of members: #roomMembers"/>
    <ListView fx:id="lvActiveMembers">
<!--        already joined members -->
    </ListView>
    <Button text="Start quiz" styleClass="btn-primary" onAction="#onStartQuizClick"/>
    <Button text="Leave room" styleClass="btn-primary" onAction="#onLeaveRoomClick"/>

</VBox>
