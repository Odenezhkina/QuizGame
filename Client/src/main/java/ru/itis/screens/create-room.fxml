<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="5.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.itis.controllers.CreateRoomController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <ProgressIndicator fx:id="bar" visible="false"/>

    <Label fx:id="labelCreateRoom" text="Create room" styleClass="label-title"/>
    <TextField fx:id="tfUsername" text="Username"/>
    <Spinner fx:id="spinnerMaxMembers" editable="true">
    </Spinner>
    <Button text="Create" styleClass="btn-primary" onAction="#createRoom"/>
    <Button text="Back" styleClass="btn-default" onAction="#navigateBack"/>
</VBox>
