<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import ru.itis.utils.CountdownTimer?>
<VBox alignment="CENTER" spacing="5.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.itis.controllers.QuizController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <CountdownTimer fx:id="labelTimer"/>

    <Label fx:id="labelQuiz" styleClass="label-title" style="-fx-alignment: start"/>

    <VBox fx:id="vboxAnswerVariants"/>

    <Button fx:id="btnAnswer" text="Answer" styleClass="btn-primary" onAction="#answerQuestion"/>
    <Label fx:id="labelTimeUp" text="Time is up" styleClass="label-warning"/>
</VBox>
